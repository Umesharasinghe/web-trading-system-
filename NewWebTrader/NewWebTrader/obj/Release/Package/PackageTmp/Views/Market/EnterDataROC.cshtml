

@{
    ViewBag.Title = "EnterDataROC";
    Layout = "~/Views/Shared/LayoutIndicators.cshtml";
}


<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">ROC Values</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="@Url.Action("EnterDataROC","Market")" method="post">
                <div class="box-body">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Select Market Type</label>
                        <select name="Market" class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option value="EU">EUR/USD</option>
                            <option value="UJ" selected="selected">USD/JPY</option>
                            <option value="UC">USD/CHF</option>
                            <option value="GG">Google</option>
                            <option value="MS">Microsoft</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Opening Date:</label>

                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input name="SelectDate" type="date" class="form-control pull-right" id="datepicker">
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label>Period:</label>

                        <div class="input-group date">
                            <input name="period" class="form-control" type="text" />
                        </div>
                        <!-- /.input group -->
                    </div>

                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        @if (ViewBag.C != null)
        {
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@ViewBag.C</h3>
                    <p style="font-weight: bold; font-size:24px;">
                        @if (ViewBag.C > 0)
                        {
                            <text>Price is rising</text>
                        }
                        else if (ViewBag.C == 0)
                        {
                            <text>Price is stable</text>
                        }
                        else
                        {
                            <text>Price is falling</text>
                        }
                    </p>
                </div>
                <div class="icon">
                    <i class="ion-social-usd"></i>
                </div>
            </div>
        }
        
    </div>
</div>



