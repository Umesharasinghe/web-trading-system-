
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@foreach (var x in ViewBag.News.articles)
{
    <div class="box box-widget">
        <div class="box-header with-border">
            <div class="user-block">
                <span class="username"><a href="#">@x.author</a></span>
                <span class="description">Published At - @x.publishedAt</span>
            </div>
            <!-- /.user-block -->
            <div class="box-tools">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
            <!-- /.box-tools -->
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <!-- post text -->
            <p>
                @x.description
            </p>

            <div class="attachment-block clearfix">
                <img class="attachment-img" src="@x.urlToImage" alt="Attachment Image">

                <div class="attachment-pushed">
                    <h4 class="attachment-heading"><a href="@x.url">Click here for more info</a></h4>

                    <div class="attachment-text">
                        Description about the attachment can be placed here.
                        Lorem Ipsum is simply dummy text of the printing and typesetting industry...
                    </div>
                </div>
            </div>
        </div>

    </div>
}



